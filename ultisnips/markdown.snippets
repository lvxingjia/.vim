# link
snippet a "link"
[${1:text}](${0:url})
endsnippet
snippet lk "link"
<$0:url>
endsnippet
snippet v "link"
[${1:text}][${2:var}]
[$2]:${0:url}
endsnippet

# image
snippet img "image"
![alt ${1:text}](${2:url} "${0:title}")
endsnippet

# tab
snippet t "table" b
|${1:a}|${2:b}|${3:c}|
|:----:|-----:|-----:|
|${4:x}|      |      |
|${0:y}|      |      |
endsnippet
snippet 表 "table" b
|${1}|${2}|${3}|
|:----:|-----:|-----:|
|${4}|      |      |
|${0}|      |      |
endsnippet
snippet 表格 "table" b
|${1}|${2}|${3}|
|:----:|-----:|-----:|
|${4}|      |      |
|${0}|      |      |
endsnippet
snippet 3t "3x3 table" b
|${1:a}|${2:b}|${3:c}|
|:----:|-----:|-----:|
|${4:x}|      |      |
|${0:y}|      |      |
endsnippet
snippet 三列 "3x3 table" b
|${1}|${2}|${3}|
|:----:|-----:|-----:|
|${4}|      |      |
|${0}|      |      |
endsnippet
snippet 4t "3x4 table" b
|${1:a}|${2:b}|${3:c}|${4:d}|
|:----:|-----:|-----:|-----:|
|${5:x}|      |      |      |
|${0:y}|      |      |      |
endsnippet
snippet 四列 "3x4 table" b
|${1}|${2}|${3}|${4}|
|:----:|-----:|-----:|-----:|
|${5}|      |      |      |
|${0}|      |      |      |
endsnippet
